# API Configuration
LOG_LEVEL=INFO

# LLM configuration (REQUIRED)
# Supported providers: openai, anthropic
LLM_PROVIDER=openai

# Generic LLM variables (required)
# For OpenAI public API:
#   LLM_BASE_URL=https://api.openai.com
#   LLM_API_VERSION=   (leave empty)
# For Azure OpenAI, set your endpoint and API version (e.g. 2024-06-01)
LLM_API_KEY=
LLM_MODEL=
LLM_BASE_URL=
LLM_API_VERSION=

# Optional TTS configuration
# Default OpenAI TTS model and settings
TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE=alloy
TTS_FORMAT=mp3

# TTS service endpoint (optional; overrides generic LLM_* for TTS only)
# Key always uses LLM_API_KEY. If TTS_BASE_URL is blank, it falls back to LLM_BASE_URL.
# For OpenAI TTS, set: https://api.openai.com
# Azure OpenAI TTS is not supported by this endpoint
TTS_BASE_URL=